<html>
<head>
  <title>siteRanker!</title>
  <link href="/bower_components/bootstrap/dist/css/slate-bootstrap.min.css" rel="stylesheet">
 <!-- angular -->
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <!-- angular ui-router -->
  <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/js/angularApp.js"></script>
  <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>
<body ng-app="siteRanker" ng-controller="MainCtrl">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

       <ui-view></ui-view>
    </div>
  </div>
          <script type="text/ng-template" id="/home.html">    
  <div class="page-header">
    <h1>My Site Scoreboard</h1>
  </div>  
  
    
      <div ng-repeat="site in sites">
         <span style="font-size:20px; margin-left:10px;">
          <a ng-show="site.link" href="{{site.link}}">
            {{site.id}}
          </a>
           
          <span ng-hide="site.link">
            {{site.id}}
          </span>
          
          <a ng-show="site.link" href="{{site.link}}">
           <img src="{{site.image}}"/> 
          </a>           
           <span>
              <a href="#/sites/{{site.id}}">&nbsp;&nbsp;&nbsp;My thoughts</a>
           </span>           
        </span>
        <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(site)"></span>
        {{site.upvotes}}
       
      </div>
      
     <form ng-submit="addSite()" style="margin-top:30px;" class="form-horizontal">
        <h3>Your new favorite site</h3>
       
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Site" ng-model="id"/>
        </div>
       
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Link" ng-model="link"/>
        </div>
       
        <button type="submit" class="btn btn-default">Put up on score board</button>
      </form>
   
    </script>
    <script type="text/ng-template" id="/sites.html">
      <div class="page-header">
        <h3>
          <a ng-show="site.link" href="{{site.link}}">
          {{site.id}}
           <img src= "{{site.image}}"/>
          </a>
          <span ng-hide="site.link">
          {{site.id}}
            <img src= "{{site.image}}"/>
          </span>
        </h3>
      </div>

      <div ng-repeat="comment in site.comments">
        <span class="glyphicon glyphicon-thumbs-up"
          ng-click="incrementUpvotes(comment)"></span>
        {{comment.upvotes}} - by {{comment.author}}
        <span style="font-size:20px; margin-left:10px;">
          {{comment.body}}
        </span>
      </div>
      
      <form ng-submit="addComments()"
    style="margin-top:30px;">
    <h3>Add a new thought</h3>


    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Author"
      ng-model="author"></input>
    </div>
    
    <div class="form-group">
      <input type="text"
      class="form-control"
      placeholder="Comment"
      ng-model="body"></input>
    </div>
    <button type="submit" class="btn btn-primary">Add a thought</button>
  </form>
  
    </script>  
      
    
</body>
</html>